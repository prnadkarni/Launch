<!DOCTYPE html>
<html>
<title>Profile | Jobs Website</title>

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/user.css">
</head>

<body>
    <div id=mainDiv>

        <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
            <a class="navbar-brand" href="/"><img src="placeholder_logo.png" width="60" height="60" alt=""></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <% if (!currentUser){ %>
					<li class="nav-item navbar-right">
						<a class="nav-link" href="/forums">Forums</a>
					</li>
					<li class="nav-item navbar-right">
						<a class="nav-link" href="/about-us">About Us</a>
					</li>
					<li class="nav-item navbar-right">
						<a class="nav-link" href="/login">Sign In</a>
					</li>
					<li class="nav-item active navbar-right">
						<a class="nav-link" href="/sign-up">Sign Up</a>
					</li>
				<% } else { %>
					<li class="nav-item navbar-right">
                        <a class="nav-link" href="/forums">Forums</a>
                    </li>
                    <li class="nav-item navbar-right">
                        <a class="nav-link" href="/about-us">About Us</a>
                    </li>
					<li class="nav-item navbar-right">
                        <a class="nav-link" href="/log-out">Log Out</a>
                    <li class="nav-item navbar-right">
                        <a class="navbar-link" href="/user/<%= currentUser._id %>"><img src="<%= currentUser.image %>" width="30" height="30" alt=""></a>
                    </li>
				<% } %>

                </ul>
            </div>
        </nav>
        <div id="profileDiv">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent" id="profile_navbar">
                <a class="navbar-brand" href="/"><img src="placeholder_logo.png" width="40" height="40" alt=""></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                            <span class="navbar-toggler-icon"></span>
                </button>
                <label for="username" id="username"><%= user.username %></label>
                <div class="collapse navbar-collapse" id="profileNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item navbar-right">
                            <a class="nav-link" id="change_user" href="/user/<%= user._id %>/edit">Change Username</a>
                        </li>
                        
                        <li class="nav-item navbar-right">
                            <a class="nav-link" id="logout" href="/">Log Out</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <input type="search" class="form-control" id="search" placeholder="Search">
            <h4 id="posts">Posts</h4>
            <ul class="list-group" id="post_group">
                <li class="post ">
                    <div id="post_info">
						<% user.posts.forEach(function(Post){ %>
                        <div>
                            <a href="/forums/<%= Post._id %>"><label for="post_name" id="PostName"><%= Post.name %></label></a>
                            <span>
                                <label for="post_category" class="category"><%= Post.category %>; %></label>
                                <label for="post_subcategory" class="category"><%= Post.subcategory %></label>
                            </span>
                        </div>
                        <img src="placeholder_logo.png" width="20" height="20" alt="">
                        <label for="post_author" id="author_info"><%= Post.author.username %> on <%= Post.date.toDateString() %></label>
						<% }) %>

                </li>
            </ul>

            <h4 id="posts">Commented Posts</h4>
            <ul class="list-group" id="post_group">
                <li class="post ">
                    <div id="post_info">
                        <% user.comments.forEach(function(Post){ %>
                        <div>
                            <a href="/forums/<%= Post._id %>"><label for="post_name" id="PostName"><%= Post.name %></label></a>
                            <span>
                                <label for="post_category" class="category"><%= Post.category %>; %></label>
                                <label for="post_subcategory" class="category"><%= Post.subcategory %></label>
                            </span>
                        </div>
                        <img src="placeholder_logo.png" width="20" height="20" alt="">
                        <label for="post_author" id="author_info"><%= Post.author %> on <%= Post.date.toDateString() %></label>
						<% }) %>
                </li>
            </ul>
            </div>
            </div>
</body>

</html>
