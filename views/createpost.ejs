    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/createpost.css">
</head>

<body>
    <div id=mainDiv>
      <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
        <a class="navbar-brand" href="/home"><img src="placeholder_logo.png" width="60" height="60" alt=""></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
            </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <% if (!currentUser){ %>
					<li class="nav-item navbar-right">
						<a class="nav-link" href="/forums">Forums</a>
					</li>
					<li class="nav-item navbar-right">
						<a class="nav-link" href="/about-us">About Us</a>
					</li>
					<li class="nav-item navbar-right">
						<a class="nav-link" href="/log-in">Sign In</a>
					</li>
					<li class="nav-item active navbar-right">
						<a class="nav-link" href="/sign-up">Sign Up</a>
					</li>
				<% } else { %>
					<li class="nav-item navbar-right">
                        <a class="nav-link" href="/forums">Forums</a>
                    </li>
                    <li class="nav-item navbar-right">
                        <a class="nav-link" href="/about-us">About Us</a>
                    </li>
					<li class="nav-item navbar-right">
                        <a class="nav-link" href="/log-out">Log Out</a>
                    <li class="nav-item navbar-right">
                        <a class="navbar-link" href="/user"><img src="<%= currentUser.image %>" width="30" height="30" alt=""></a>
                    </li>
				<% } %>
            </ul>
        </div>
    </nav>

        <div class="flex-container" id=postAttributesBar>
          <!--<form>
            <div class="col-xs-4 form-group">
              <label for="post-title">Post Title</label>
              <input type="text" class="form-control" name="name" id="inputTitle" placeholder="Title">
            </div>
          </form>-->
		<form action="/forums" method="post">
			 <div class="col-xs-4 form-group">
              <label for="post-title">Post Title</label>
              <input type="text" class="form-control" name="name" id="inputTitle" placeholder="Title" required>
            </div>
			  <div class="col-xs-3" id=pBarCategories>
				<label for="category">Category</label>
				  <select class="form-control" name="category">
				  <% category.forEach(function(Category){ %>
				  <option value="<%= Category._id %>" name="category"><%= Category.name %></option>
				  <% }) %>
					</select>
			  </div>
			  <div class="col-xs-3">
				<label for="subcategory">Sub-Category</label>
				  <select class="form-control" name="subcategory">
				  <% subcategory.forEach(function(Subcategory){ %>
				  <option value="<%= Subcategory._id %>" name="subcategory"><%= Subcategory.name %></option>
				  <% }) %>
					</select>
			  </div>
			</div>

			<div id=postDiv>
				<textarea id=postBox class="form-control" name="body" rows="15" placeholder="Write your Post Here" required></textarea>
				<div class="row" id=buttons>
				  <input class="col-lg-3 btn btn-light" type="submit" value="Submit">
				  <a class="col-lg-3 btn btn-light" href="/forums" role="button">Cancel</a>
				</div>
			</div>
		</form>
    </div>
</body>

</html>
